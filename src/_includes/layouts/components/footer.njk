<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section footer-section--brand">
        <div class="footer-brand">
          {% if site.logo %}
          <img src="{{ site.logo }}" alt="{{ site.title }}" width="120" height="40">
          {% else %}
          <h3>{{ site.title }}</h3>
          {% endif %}
        </div>
        <p class="footer-description">{{ site.description }}</p>
        
        <div class="social-links">
          {% for social in site.social %}
          <a href="{{ social.url }}" 
             target="_blank" 
             rel="noopener noreferrer" 
             aria-label="{{ social.name }}"
             class="social-link social-link--{{ social.name | lower }}">
            <svg class="social-icon" width="24" height="24">
              <use xlink:href="#icon-{{ social.name | lower }}"></use>
            </svg>
          </a>
          {% endfor %}
        </div>
      </div>
      
      <div class="footer-section footer-section--links">
        <h4>Quick Links</h4>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about/">About</a></li>
          <li><a href="/blog/">Blog</a></li>
          <li><a href="/contact/">Contact</a></li>
        </ul>
      </div>

      <div class="footer-section footer-section--contact">
        <h4>Contact Us</h4>
        <ul class="footer-contact">
          <li>Email: <a href="mailto:info@example.com">info@example.com</a></li>
          <li>Phone: <a href="tel:+1234567890">+1 234 567 890</a></li>
          <li>Address: 123 Main St, City, Country</li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {{ site.title }} {{ "now" | date("YYYY") }}. All rights reserved.</p>
    </div>
  </div>
</footer>