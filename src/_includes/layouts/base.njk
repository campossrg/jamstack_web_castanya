<!DOCTYPE html>
<html lang="{{ site.lang or 'es' }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO Meta Tags -->
  <title>{% if title %}{{ title }} - {% endif %}{{ site.title }}</title>
  <meta name="description" content="{{ description or site.description }}">
  <meta name="author" content="{{ site.author }}">
  
  <!-- Open Graph -->
  <meta property="og:title" content="{% if title %}{{ title }} - {% endif %}{{ site.title }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:image" content="{{ site.url }}{{ image or '/assets/images/og-default.jpg' }}">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{% if title %}{{ title }} - {% endif %}{{ site.title }}">
  <meta name="twitter:description" content="{{ description or site.description }}">
  <meta name="twitter:image" content="{{ site.url }}{{ image or '/assets/images/twitter-default.jpg' }}">
  
  <!-- Favicon -->
  <link rel="icon" href="/assets/images/favicon.ico" sizes="any">
  <link rel="icon" href="/assets/images/favicon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/assets/images/apple-touch-icon.png">
  <link rel="manifest" href="/manifest.json">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/assets/css/main.css">
  
  <!-- Schema.org structured data -->
  {% if schema %}
  <script type="application/ld+json">
    {{ schema | dump | safe }}
  </script>
  {% endif %}
</head>

<body class="{% if bodyClass %}{{ bodyClass }}{% endif %}">
  <!-- Skip to content link for accessibility -->
  <a href="#main-content" class="skip-link">Skip to main content</a>
  
  <!-- Header -->
  <header class="site-header" role="banner">
    <div class="container">
      <nav class="main-nav" role="navigation" aria-label="Main navigation">
        <div class="nav-brand">
          <a href="/" class="logo">
            <img src="/assets/images/logo.svg" alt="{{ site.title }}" width="120" height="40">
          </a>
        </div>
        
        <button class="nav-toggle" aria-expanded="false" aria-controls="nav-menu">
          <span class="sr-only">Toggle navigation</span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
        
        <div class="nav-menu" id="nav-menu">
          <ul class="nav-list">
            <li><a href="/" {% if page.url == "/" %}aria-current="page"{% endif %}>Inicio</a></li>
            <li><a href="/shop/" {% if page.url == "/shop/" %}aria-current="page"{% endif %}>Tienda</a></li>
            <li><a href="/blog/" {% if page.url.startsWith("/blog/") %}aria-current="page"{% endif %}>Blog</a></li>
            <li><a href="/about/" {% if page.url == "/about/" %}aria-current="page"{% endif %}>Sobre nosotros</a></li>
            <li><a href="/contact/" {% if page.url == "/contact/" %}aria-current="page"{% endif %}>Contacto</a></li>
          </ul>
          
          <div class="nav-actions">
            <button class="cart-toggle" aria-label="View shopping cart">
              <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5.4M7 13v6a2 2 0 002 2h6a2 2 0 002-2v-6"/>
              </svg>
              <span class="cart-count" id="cart-count">0</span>
            </button>
          </div>
        </div>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main id="main-content" role="main">
    {{ content | safe }}
  </main>

  <!-- Shopping Cart Sidebar -->
  <div class="cart-sidebar" id="cart-sidebar">
    <div class="cart-header">
      <h2>Carrito de compras</h2>
      <button class="cart-close" aria-label="Close cart">×</button>
    </div>
    <div class="cart-content">
      <div class="cart-items" id="cart-items">
        <!-- Cart items will be populated by JavaScript -->
      </div>
      <div class="cart-footer">
        <div class="cart-total">
          <strong>Total: <span id="cart-total">€0.00</span></strong>
        </div>
        <button class="btn btn-primary btn-full" id="checkout-btn">
          Proceder al pago
        </button>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="site-footer" role="contentinfo">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>{{ site.title }}</h3>
          <p>{{ site.description }}</p>
          <div class="social-links">
            {% for social in site.social %}
            <a href="{{ social.url }}" target="_blank" rel="noopener" aria-label="{{ social.name }}">
              <svg class="social-icon">
                <use xlink:href="#icon-{{ social.name | lower }}"></use>
              </svg>
            </a>
            {% endfor %}
          </div>
        </div>
        
        <div class="footer-section">
          <h3>Enlaces rápidos</h3>
          <ul>
            <li><a href="/shop/">Tienda</a></li>
            <li><a href="/blog/">Blog</a></li>
            <li><a href="/about/">Sobre nosotros</a></li>
            <li><a href="/contact/">Contacto</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h3>Atención al cliente</h3>
          <ul>
            <li><a href="/shipping/">Envíos</a></li>
            <li><a href="/returns/">Devoluciones</a></li>
            <li><a href="/faq/">FAQ</a></li>
            <li><a href="/privacy/">Política de privacidad</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h3>Newsletter</h3>
          <p>Suscríbete para recibir ofertas exclusivas</p>
          <form class="newsletter-form" data-newsletter>
            <input type="email" placeholder="Tu email" required>
            <button type="submit" class="btn btn-secondary">Suscribirse</button>
          </form>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; {% year %} {{ site.title }}. Todos los derechos reservados.</p>
        <div class="payment-methods">
          <img src="/assets/images/payments/visa.svg" alt="Visa" width="40" height="25">
          <img src="/assets/images/payments/mastercard.svg" alt="MasterCard" width="40" height="25">
          <img src="/assets/images/payments/redsys.svg" alt="RedSys" width="40" height="25">
        </div>
      </div>
    </div>
  </footer>

  <!-- SVG Sprite for icons -->
  <svg style="display: none;" aria-hidden="true">
    <symbol id="icon-facebook" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
    </symbol>
    <symbol id="icon-twitter" viewBox="0 0 24 24">
      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
    </symbol>
    <symbol id="icon-instagram" viewBox="0 0 24 24">
      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
    </symbol>
  </svg>

  <!-- Scripts -->
  <script src="/assets/js/main.js"></script>
  <script src="/assets/js/cart.js"></script>
  
  {% if page.url.startsWith("/shop/") %}
  <script src="/assets/js/ecommerce.js"></script>
  {% endif %}

  <!-- Service Worker Registration -->
  <script>
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('/sw.js');
    }
  </script>
</body>
</html>