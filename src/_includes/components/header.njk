<header class="site-header" role="banner">
  <div class="container">
    <nav class="main-nav" role="navigation" aria-label="Main navigation">
      <div class="nav-brand">
        <a href="/" class="logo" aria-label="Volver al inicio">
          {% if site.logo %}
          <img src="{{ site.logo }}" alt="{{ site.title }}" width="120" height="40">
          {% else %}
          <span class="logo-text">{{ site.title }}</span>
          {% endif %}
        </a>
      </div>
      
      <button class="nav-toggle" 
              aria-expanded="false" 
              aria-controls="nav-menu"
              aria-label="Toggle navigation menu">
        <span class="sr-only">Toggle navigation</span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>
      
      <div class="nav-menu" id="nav-menu">
        <ul class="nav-list">
          {% for item in navigation.main %}
          <li class="nav-item {% if item.children %}has-dropdown{% endif %}">
            <a href="{{ item.url }}" 
               class="nav-link"
               {% if page.url == item.url %}aria-current="page"{% endif %}>
              {{ item.text }}
              {% if item.children %}
              <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <polyline points="6,9 12,15 18,9"></polyline>
              </svg>
              {% endif %}
            </a>
            
            {% if item.children %}
            <ul class="nav-dropdown">
              {% for child in item.children %}
              <li>
                <a href="{{ child.url }}" class="nav-dropdown-link">
                  {{ child.text }}
                </a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
        
        <div class="nav-actions">
          <div class="nav-search">
            <button class="search-toggle" aria-label="Open search">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
            </button>
          </div>
          
          <button class="cart-toggle" aria-label="View shopping cart">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5.4M7 13v6a2 2 0 002 2h6a2 2 0 002-2v-6"/>
            </svg>
            <span class="cart-count" id="cart-count">0</span>
          </button>
        </div>
      </div>
    </nav>
  </div>
  
  <!-- Search Modal -->
  <div class="search-modal" id="search-modal">
    <div class="search-modal__content">
      <form class="search-form" role="search">
        <label for="search-input" class="sr-only">Buscar productos</label>
        <input type="search" 
               id="search-input" 
               placeholder="¿Qué estás buscando?"
               autocomplete="off">
        <button type="submit" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </button>
      </form>
      <button class="search-close" aria-label="Close search">×</button>
    </div>
  </div>
</header>